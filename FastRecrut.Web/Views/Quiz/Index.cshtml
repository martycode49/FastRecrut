@model IEnumerable<FastRecrut.Web.ViewModels.QuizViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rep1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rep2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rep3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rep4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidQuestion)
