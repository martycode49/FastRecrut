                @Html.DisplayNameFor(model => model.CommentFalse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubSubject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rep1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rep2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rep3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rep4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidQuestion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentFalse)
                </td>
                <td>
                    @Html.ActionLink("", "Edit", new { id = item.Id }, new { @class = "btn btn-default fa fa-pencil" })
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn btn-default fa fa-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Web Api CRUD Operations','Are You Sure to Delete this Record ?',function(){
                window.location.href  = '@Url.Action("Delete","Employee")/'+id;
            },null );
        }
    </script>
}
