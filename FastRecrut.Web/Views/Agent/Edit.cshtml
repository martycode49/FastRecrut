@model AgentViewModel
<span class="btn-danger">@ViewBag.MessageError</span>
<form asp-controller="Agent" asp-action="Edit" method="post" class="col-12 form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Civility" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Civility" class="form-control" />
            <span asp-validation-for="@Model.Civility" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Lastname" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Lastname" class="form-control" />
            <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Firstname" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Firstname" class="form-control" />
            <span asp-validation-for="@Model.Firstname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Phone" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Phone" class="form-control" />
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Status" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Status" class="form-control" />
            <span asp-validation-for="@Model.Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Edit Agent" />
        </div>
    </div>

</form>
