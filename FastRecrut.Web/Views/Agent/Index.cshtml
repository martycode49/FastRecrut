@model IEnumerable<FastRecrut.Web.ViewModels.AgentViewModel>

@{
    ViewBag.Title = "Index";
}
<br />

<p>
    <a href="@Url.Action("Register","Account")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Civility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Civility)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lastname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Firstname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RoleList)
    </td>
    <td>
        <a href="@Url.Action("Edit", "Agent", new { id = item.AgentId})" class="btn btn-default"><i class="fa fa-pencil"></i>  Edit</a>
        <a onclick="Delete(@item.AgentId)" class="btn btn-default"><i class="fa fa-trash"></i>  Delete</a>
    </td>
</tr>
    }

</table>
